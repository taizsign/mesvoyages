{% extends 'base.html.twig' %}

{% block title %}Mes Voyages - Liste des voyages{% endblock %}

{% block body %}
    <h1 class="text-center mt-4 mb-4">La liste de mes voyages</h1>

    <table class="table table-striped mt-4">
        <thead class="table-dark">
        <tr>
            <th>
                Ville
                <a href="{{ path('app_voyages_tri', {champ: 'ville', ordre: 'ASC'}) }}" class="btn btn-sm btn-outline-light ms-2">↑</a>
                <a href="{{ path('app_voyages_tri', {champ: 'ville', ordre: 'DESC'}) }}" class="btn btn-sm btn-outline-light">↓</a>
            </th>
            <th>
                Pays
                <a href="{{ path('app_voyages_tri', {champ: 'pays', ordre: 'ASC'}) }}" class="btn btn-sm btn-outline-light ms-2">↑</a>
                <a href="{{ path('app_voyages_tri', {champ: 'pays', ordre: 'DESC'}) }}" class="btn btn-sm btn-outline-light">↓</a>
            </th>
            <th>
                Note
                <a href="{{ path('app_voyages_tri', {champ: 'note', ordre: 'ASC'}) }}" class="btn btn-sm btn-outline-light ms-2">↑</a>
                <a href="{{ path('app_voyages_tri', {champ: 'note', ordre: 'DESC'}) }}" class="btn btn-sm btn-outline-light">↓</a>
            </th>
            <th>
                Date
                <a href="{{ path('app_voyages_tri', {champ: 'datevisite', ordre: 'ASC'}) }}" class="btn btn-sm btn-outline-light ms-2">↑</a>
                <a href="{{ path('app_voyages_tri', {champ: 'datevisite', ordre: 'DESC'}) }}" class="btn btn-sm btn-outline-light">↓</a>
            </th>
        </tr>
        </thead>
        <tbody>
        {# voyages send par le controller #}
        {% for visite in visites %}
            <tr>
                <td>{{ visite.ville }}</td>
                <td>{{ visite.pays }}</td>
                <td>{{ visite.note }}/20</td>
                <td>{{ visite.datevisite ? visite.datevisite|date('d/m/Y') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucun voyage n'a été trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
