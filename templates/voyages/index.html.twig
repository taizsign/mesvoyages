{% extends 'base.html.twig' %}

{% block title %}Mes Voyages - Liste des voyages{% endblock %}

{% block body %}
    <h1 class="text-center mt-4 mb-4">La liste de mes voyages</h1>

    <table class="table table-striped mt-4">
        <thead class="table-dark">
        <tr>
            <th>
                Ville
                <a href="{{ path('app_voyages_tri', {champ: 'ville', ordre: 'ASC'}) }}" class="btn btn-sm btn-outline-light ms-2">↑</a>
                <a href="{{ path('app_voyages_tri', {champ: 'ville', ordre: 'DESC'}) }}" class="btn btn-sm btn-outline-light">↓</a>
            </th>
            <th>
                Pays
                <a href="{{ path('app_voyages_tri', {champ: 'pays', ordre: 'ASC'}) }}" class="btn btn-sm btn-outline-light ms-2">↑</a>
                <a href="{{ path('app_voyages_tri', {champ: 'pays', ordre: 'DESC'}) }}" class="btn btn-sm btn-outline-light">↓</a>
            </th>
            <th>
                Note
                <a href="{{ path('app_voyages_tri', {champ: 'note', ordre: 'ASC'}) }}" class="btn btn-sm btn-outline-light ms-2">↑</a>
                <a href="{{ path('app_voyages_tri', {champ: 'note', ordre: 'DESC'}) }}" class="btn btn-sm btn-outline-light">↓</a>
            </th>
            <th>
                Date
                <a href="{{ path('app_voyages_tri', {champ: 'datevisite', ordre: 'ASC'}) }}" class="btn btn-sm btn-outline-light ms-2">↑</a>
                <a href="{{ path('app_voyages_tri', {champ: 'datevisite', ordre: 'DESC'}) }}" class="btn btn-sm btn-outline-light">↓</a>
            </th>
            <th>Actions</th>
        </tr>
        <tr>
            <th>
                <form method="POST" action="{{ path('app_voyages_recherche', {champ: 'ville'}) }}" class="d-flex" data-turbo="false">
                    <input type="text" name="recherche" class="form-control form-control-sm me-2" placeholder="Filtrer...">
                    <button class="btn btn-sm btn-secondary" type="submit">Recherche</button>
                </form>
            </th>
            <th>
                <form method="POST" action="{{ path('app_voyages_recherche', {champ: 'pays'}) }}" class="d-flex" data-turbo="false">
                    <input type="text" name="recherche" class="form-control form-control-sm me-2" placeholder="Filtrer...">
                    <button class="btn btn-sm btn-secondary" type="submit">Recherche</button>
                </form>
            </th>
            <th></th> <th></th> <th></th> </tr>
        </thead>
        <tbody>
        {% for visite in visites %}
            <tr>
                <td>
                    <a href="{{ path('app_voyage_details', {id: visite.id}) }}" class="text-decoration-none fw-bold">
                        {{ visite.ville }}
                    </a>
                </td>
                <td>{{ visite.pays }}</td>
                <td>{{ visite.note }}/20</td>
                <td>{{ visite.datevisite ? visite.datevisite|date('d/m/Y') : '' }}</td>
                <td>
                    {# bouton edit #}
                    <a href="{{ path('app_voyage_edit', {id: visite.id}) }}" class="btn btn-sm btn-info me-2">
                        Editer
                    </a>

                    {# bouton suppr #}
                    <a href="{{ path('app_voyage_suppr', {id: visite.id}) }}"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Etes-vous sûr de vouloir supprimer {{ visite.ville }} ?')">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun voyage n'a été trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
